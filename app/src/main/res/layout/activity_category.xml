<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryColor"
    android:paddingTop="24dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCategoryHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_header"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/accentColor"
                android:layout_marginBottom="16dp"/>

            <!-- Country buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/layoutCountries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnItaly"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/country_italy"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryLight"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btnFrance"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/country_france"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryColor"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btnJapan"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/country_japan"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryLight"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btnIndia"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/country_india"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryLight"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btnUSA"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/country_usa"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryLight"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Food type buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/layoutFoodTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMains"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/food_mains"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryColor"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btnBeverages"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/food_beverages"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryLight"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btnDesserts"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/food_desserts"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryLight"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btnAppetizers"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/food_appetizers"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/primaryLight"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Recipe cards -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sushi"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipe_sushi"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipe_sushi_desc"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnViewMore1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_view_more"
                            android:backgroundTint="@color/accentColor"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/favIcon1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/btn_star_big_off"
                            app:tint="@color/gray"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/margherita"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipe_pizza"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipe_pizza_desc"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnViewMore2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_view_more"
                            android:backgroundTint="@color/accentColor"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/favIcon2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/btn_star_big_off"
                            app:tint="@color/gray"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/salad"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipe_salad"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipe_salad_desc"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnViewMore3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_view_more"
                            android:backgroundTint="@color/accentColor"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/favIcon3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/btn_star_big_off"
                            app:tint="@color/gray"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_colors"
        app:itemTextColor="@color/nav_item_colors"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
